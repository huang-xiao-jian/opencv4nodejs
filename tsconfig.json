{
  "compilerOptions": {
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2019",
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
  },
  //"files": [ "./install/install.ts", "./install/parseEnv.ts" ]
  "include": [ "./install/*.ts", "./lib/**/*.ts" ]
}
